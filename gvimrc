
source ~/.vimrc                             " Vimrc
set guifont=DejaVu\ Sans\ Mono\ 10          " Font
set guiheadroom=0                           " Window size
set lines=55                                " Editor size
set columns=90
set guioptions=agimrt                       " Gui options
  " a: autoselect
  " g: grey menu items
  " i: vim icon
  " m: menubar
  " r: right scrollbar
  " t: tearoff menus
